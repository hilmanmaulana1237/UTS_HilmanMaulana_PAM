<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrayBg">

    <!-- Header dengan gradient -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primaryOrange"
        android:padding="20dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvHalo"
            android:text="Halo Nazwa,"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Pilih makanan favoritmu hari ini!"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:alpha="0.9"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- konten scroll, dipisah dari bottom bar -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintBottom_toTopOf="@id/btnKeOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Judul section dengan icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:text="🍽️ Menu Makanan"
                    android:textStyle="bold"
                    android:textColor="@color/darkGray"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:background="@color/fieldBorder"/>
            </LinearLayout>

            <!-- RadioGroup untuk makanan -->
            <RadioGroup
                android:id="@+id/rgMakanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Items akan ditambahkan secara dinamis dari code -->
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <!-- Tombol Order dengan shadow -->
    <Button
        android:id="@+id/btnKeOrder"
        android:text="🛒 Pesan Sekarang"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:backgroundTint="@color/primaryOrange"
        android:elevation="6dp"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom bar -->
    <include
        android:id="@+id/bottomBar"
        layout="@layout/partial_bottom_bar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
